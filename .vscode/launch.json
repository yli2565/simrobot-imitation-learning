            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_env.py",
            "subProcess": true,
            "justMyCode": false
        },
        {
            "name": "SimRobot: Tianshou Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "subProcess": true,
            "justMyCode": false
        },
        {
            "name": "SimRobot: Tianshou Sample",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_sample_tianshou_minimum.py",
            "subProcess": true,
            "justMyCode": false
        },
        {
            "name": "SimRobot: RLlib Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_sample_rllib.py",
            "args": [
                "--enable-new-api-stack",
                "--num-agents=5",
                "--num-cpus=20"
            ],
            "subProcess": true,
            "justMyCode": false
        },
    ]
